<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable type="com.labs.valtech.vris.app.RoomActivity" name="activity" />
        <variable type="com.labs.valtech.vris.viewModels.RoomViewModel" name="model" />
    </data>

    <LinearLayout android:id="@+id/activity_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- The primary full-screen view. This can be replaced with whatever view
             is needed to present your content, e.g. VideoView, SurfaceView,
             TextureView, etc. -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/roomInfoBar"
            android:background="@color/colorAccent">

            <TextView
                android:id="@+id/roomName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:text="@{model.room.name , default=Room}"
                android:textAlignment="textStart"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/currentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:text="@{model.date.toString(@string/dateFormat), default=@string/dateFormat}"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/currentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:text="@{model.date.toString(@string/timeFormat), default=@string/timeFormat}"
                android:textAlignment="textEnd"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:ignore="RtlCompat" />
        </LinearLayout>

        <TextView
            android:id="@+id/availabilityLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@{ model.availabilityLabel , default = @string/available}"
            android:textAlignment="center"
            android:textSize="@{ model.availabilitySize }" />

    </LinearLayout>
</layout>